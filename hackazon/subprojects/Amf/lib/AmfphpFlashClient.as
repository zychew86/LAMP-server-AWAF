package{		import fla.Button;		import flash.display.MovieClip;	import flash.display.Sprite;	import flash.display.StageScaleMode;	import flash.events.MouseEvent;	import flash.net.NetConnection;		import org.silexlabs.amfphp.clientgenerator.generated.ui.CouponServiceClientUi;	import org.silexlabs.amfphp.clientgenerator.generated.ui.SliderServiceClientUi;	import org.silexlabs.amfphp.clientgenerator.ui.elements.ILabel;	import org.silexlabs.amfphp.clientgenerator.ui.elements.Link;		public class AmfphpFlashClient extends MovieClip	{		private static const PADDING:int = 20;		private static const HEADER_HEIGHT:int = 100;		private var _serviceUi:Sprite;		private var _maxServiceUiWidth:Number;				public var showCouponServiceUiBtn:ILabel;				public var showSliderServiceUiBtn:ILabel;				public function AmfphpFlashClient()		{			var exchangeLink:Link = new Link();						var layoutMultiplier:int = 0;			_maxServiceUiWidth = 0;									var showCouponServiceUiBtn:Button = new Button();			showCouponServiceUiBtn.displayObject.x = PADDING;			showCouponServiceUiBtn.displayObject.y = HEADER_HEIGHT + (showCouponServiceUiBtn.displayObject.height + PADDING) * layoutMultiplier;			showCouponServiceUiBtn.label = 'CouponService';			showCouponServiceUiBtn.addEventListener(MouseEvent.CLICK, showCouponServiceUiBtnClickHandler);			addChild(showCouponServiceUiBtn);			layoutMultiplier++;			if(showCouponServiceUiBtn.width > _maxServiceUiWidth){				_maxServiceUiWidth = showCouponServiceUiBtn.width; 			}						var showSliderServiceUiBtn:Button = new Button();			showSliderServiceUiBtn.displayObject.x = PADDING;			showSliderServiceUiBtn.displayObject.y = HEADER_HEIGHT + (showSliderServiceUiBtn.displayObject.height + PADDING) * layoutMultiplier;			showSliderServiceUiBtn.label = 'SliderService';			showSliderServiceUiBtn.addEventListener(MouseEvent.CLICK, showSliderServiceUiBtnClickHandler);			addChild(showSliderServiceUiBtn);			layoutMultiplier++;			if(showSliderServiceUiBtn.width > _maxServiceUiWidth){				_maxServiceUiWidth = showSliderServiceUiBtn.width; 			}					}				private function showServiceUi(newUi:Sprite):void{			if(_serviceUi){				removeChild(_serviceUi);			}			_serviceUi = newUi;			_serviceUi.x = _maxServiceUiWidth + 2 * PADDING;			_serviceUi.y = HEADER_HEIGHT;			addChild(_serviceUi);		}								private function showCouponServiceUiBtnClickHandler(event:MouseEvent):void{			showServiceUi(new CouponServiceClientUi());			}						private function showSliderServiceUiBtnClickHandler(event:MouseEvent):void{			showServiceUi(new SliderServiceClientUi());			}					}}